<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boredat.boredat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BoredatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".activities.ComposeNewPostActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".activities.DetailPostActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activities.SessionMainActivity"
            android:label="@string/title_activity_main_session" />
        <activity android:name=".activities.SilentLoginActivity"></activity>
    </application>

</manifest>
