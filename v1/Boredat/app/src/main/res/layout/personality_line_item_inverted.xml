<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/personality_line_item_inverted_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitStart"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/profile_picture"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/personality_line_item_inverted_tv"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/textColorPrimary"
        android:layout_toRightOf="@+id/personality_line_item_inverted_iv"
        android:layout_alignWithParentIfMissing="true"
        android:text="@string/compose_post_anonymous"
        android:textSize="16sp"
        app:typeface="roboto_mono_regular"/>

</RelativeLayout>