<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!--Personality Spinner-->
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/compose_post_personality_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <!--Anonymous label (for users who don't have a personality) -->
            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/compose_post_anonymous_only_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:text="@string/compose_post_anonymous"/>

            <!--Location Checkbox-->
            <com.devspark.robototextview.widget.RobotoCheckBox
                android:id="@+id/compose_post_location_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:typeface="roboto_mono_medium"
                android:text="@string/compose_post_location_filler"/>
        </RelativeLayout>

        <!-- Compose Post EditText -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/compose_post_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/compose_post_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="8"
                android:maxLines="8"
                android:inputType="textMultiLine"/>

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>